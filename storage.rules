rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Profile avatars (user auth must match)
    match /avatars/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Business assets â€” owner can read/write anything under their own businessId
    match /businesses/{businessId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == businessId;
    }

    // Business images uploaded from profile editor
    // Path: business_images/{userId}/{timestamp}_{filename}
    match /business_images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024  // max 10MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
